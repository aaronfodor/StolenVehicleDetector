<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dist="http://schemas.android.com/apk/distribution"
    package="com.arpadfodor.stolenvehicledetector.android.app">

    <!-- Enable instant app support -->
    <dist:module dist:instant="true" />

    <!-- Declare features -->
    <uses-feature android:name="android.hardware.camera" />

    <!-- Declare permissions -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name="com.arpadfodor.stolenvehicledetector.android.app.ApplicationRoot"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- ML Kit OCR auto download -->
        <!-- To use multiple models: android:value="ocr,model2,model3" -->
        <meta-data
            android:name="com.google.mlkit.vision.DEPENDENCIES"
            android:value="ocr" />

        <!-- Declare notch support -->
        <meta-data
            android:name="android.notch_support"
            android:value="true" />

        <activity
            android:name="com.arpadfodor.stolenvehicledetector.android.app.view.CameraActivity"
            android:clearTaskOnLaunch="true"
            android:icon="@mipmap/ic_launcher"
            android:rotationAnimation="seamless"
            android:screenOrientation="fullUser"
            android:theme="@style/AppTheme">

            <!-- Main app intent filter -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- Register as a system camera app -->
            <intent-filter>
                <action android:name="android.media.action.IMAGE_CAPTURE" />
                <action android:name="android.media.action.STILL_IMAGE_CAMERA" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

        </activity>

        <activity
            android:name="com.arpadfodor.stolenvehicledetector.android.app.view.LoadActivity"
            android:clearTaskOnLaunch="true"
            android:icon="@mipmap/ic_launcher"
            android:rotationAnimation="seamless"
            android:screenOrientation="fullUser"
            android:theme="@style/AppTheme">
        </activity>

        <activity
            android:name="com.arpadfodor.stolenvehicledetector.android.app.view.utils.RecognitionActivity"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden"
            android:clearTaskOnLaunch="true"
            android:icon="@mipmap/ic_launcher"
            android:rotationAnimation="seamless"
            android:screenOrientation="fullUser"
            android:theme="@style/AppTheme">
        </activity>

        <activity
            android:name="com.arpadfodor.stolenvehicledetector.android.app.view.AlertActivity"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden"
            android:clearTaskOnLaunch="true"
            android:icon="@mipmap/ic_launcher"
            android:rotationAnimation="seamless"
            android:screenOrientation="fullUser"
            android:theme="@style/AppTheme">
        </activity>

        <activity
            android:name="com.arpadfodor.stolenvehicledetector.android.app.view.SettingsActivity"
            android:icon="@mipmap/ic_launcher"
            android:rotationAnimation="seamless"
            android:screenOrientation="fullUser"
            android:theme="@style/AppTheme">
        </activity>

        <activity
            android:name="com.arpadfodor.stolenvehicledetector.android.app.view.AboutActivity"
            android:icon="@mipmap/ic_launcher"
            android:rotationAnimation="seamless"
            android:screenOrientation="fullUser"
            android:theme="@style/AppTheme">
        </activity>

        <activity
            android:name="com.arpadfodor.stolenvehicledetector.android.app.view.HowToUseActivity"
            android:icon="@mipmap/ic_launcher"
            android:rotationAnimation="seamless"
            android:screenOrientation="fullUser"
            android:theme="@style/AppTheme">
        </activity>

    </application>

</manifest>