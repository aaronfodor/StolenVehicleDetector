<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/alert_detail_title"
        style="@style/SubtitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/alert_details"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/recognition_detail_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="@dimen/list_item_padding"
        android:layout_marginTop="@dimen/list_item_margin"
        android:layout_marginStart="@dimen/list_item_margin"
        android:layout_marginEnd="@dimen/list_item_margin"
        android:layout_marginBottom="@dimen/margin_large"
        app:layout_constraintTop_toBottomOf="@+id/alert_detail_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/card_background">

        <ScrollView
            android:id="@+id/recognition_details_scrollview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/recognition_back_button"
            android:padding="@dimen/list_item_padding"
            android:layout_margin="@dimen/list_item_margin"
            android:gravity="top">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/recognition_details_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    xmlns:card_view="http://schemas.android.com/tools"
                    android:id="@+id/recognitionDetailImageCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/list_item_margin"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    card_view:cardCornerRadius="@dimen/card_corner_radius"
                    card_view:cardPreventCornerOverlap="false">

                    <ImageView
                        android:id="@+id/recognitionDetailImage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/load_image_placeholder"
                        android:contentDescription="@string/recognition_image" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/recognitionDetailLicenseIdLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/list_item_margin"
                    android:text="@string/license_id_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/recognitionDetailImageCardView"
                    style="@style/recognitionItem" />

                <TextView
                    android:id="@+id/recognitionDetailLicenseId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/list_item_margin"
                    android:layout_marginEnd="@dimen/list_item_margin"
                    android:layout_marginBottom="@dimen/list_item_margin"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/recognitionDetailLicenseIdLabel"
                    style="@style/recognitionTitleItem" />

                <TextView
                    android:id="@+id/recognitionDetailDateLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/list_item_margin"
                    android:text="@string/date_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/recognitionDetailLicenseId"
                    style="@style/recognitionItem" />

                <TextView
                    android:id="@+id/recognitionDetailDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/list_item_margin"
                    android:layout_marginEnd="@dimen/list_item_margin"
                    android:layout_marginBottom="@dimen/list_item_margin"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/recognitionDetailDateLabel"
                    style="@style/recognitionTitleItem" />

                <TextView
                    android:id="@+id/recognitionDetailLocationLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/list_item_margin"
                    android:text="@string/location_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/recognitionDetailDate"
                    style="@style/recognitionItem" />

                <TextView
                    android:id="@+id/recognitionDetailLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/list_item_margin"
                    android:layout_marginEnd="@dimen/list_item_margin"
                    android:layout_marginBottom="@dimen/list_item_margin"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/recognitionDetailLocationLabel"
                    style="@style/recognitionTitleItem" />

                <TextView
                    android:id="@+id/recognitionDetailMessageTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/list_item_margin"
                    android:text="@string/message_edit_text_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/recognitionDetailLocation"
                    style="@style/recognitionItem" />

                <EditText
                    android:id="@+id/recognitionDetailMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/list_item_margin"
                    android:layout_marginEnd="@dimen/list_item_margin"
                    android:layout_marginBottom="@dimen/list_item_margin"
                    android:padding="@dimen/edit_text_padding"
                    android:gravity="start"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/recognitionDetailMessageTitle"
                    android:hint="@string/recognition_add_message_hint"
                    android:autofillHints="@string/recognition_add_message_hint"
                    android:inputType="textMultiLine|textCapSentences|textAutoCorrect"
                    android:imeOptions="actionDone"
                    android:background="@drawable/app_edit_background"
                    android:lines="3"
                    style="@style/recognitionItem"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

        <com.arpadfodor.stolenvehicledetector.android.app.view.utils.AppButton
            android:id="@+id/recognition_back_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/button_margin"
            android:layout_marginEnd="@dimen/button_margin"
            android:layout_marginBottom="@dimen/button_margin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/glVerticalMiddle1st"
            android:textStyle="bold"
            android:text="@string/cancel_button" />

        <com.arpadfodor.stolenvehicledetector.android.app.view.utils.AppNegativeButton
            android:id="@+id/recognition_delete_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/button_margin"
            android:layout_marginEnd="@dimen/button_margin"
            android:layout_marginBottom="@dimen/button_margin"
            android:background="@android:color/transparent"
            android:contentDescription="@string/delete_recognition"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/glVerticalMiddle1st"
            app:layout_constraintEnd_toStartOf="@+id/glVerticalMiddle2nd"
            android:textStyle="bold"
            android:text="@string/delete_button" />

        <com.arpadfodor.stolenvehicledetector.android.app.view.utils.AppPositiveButton
            android:id="@+id/recognition_send_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/button_margin"
            android:layout_marginEnd="@dimen/button_margin"
            android:layout_marginBottom="@dimen/button_margin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/glVerticalMiddle2nd"
            android:textStyle="bold"
            android:text="@string/send_button" />

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/glVerticalMiddle1st"
            app:layout_constraintGuide_percent="0.33"
            android:orientation="vertical"/>

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/glVerticalMiddle2nd"
            app:layout_constraintGuide_percent="0.66"
            android:orientation="vertical"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>